version: '3'
services:
  postgreSql:
    image: postgres:13.4
    ports:
      - "5432:5432"
    environment:
      POSTGRES_USER: postgres
      POSTGRES_PASSWORD: postgres
      POSTGRES_DB: Intern
      #PGDATA: /var/lib/postgresql/data/pgdataa
    volumes:
      - postData:/var/lib/postgresql/data
    networks:
      - net
  pgadmin:
    container_name: pgadmin4_container
    image: dpage/pgadmin4
    restart: always
    environment:
      PGADMIN_DEFAULT_EMAIL: admin@admin.com
      PGADMIN_DEFAULT_PASSWORD: postgres
    ports:
      - "5050:80"
    networks:
      - net
  app:
    build:
      context: .
      dockerfile: ./caustaza/Dockerfile
    restart: always
    environment:
      SECRET_KEY: "YES"
      DATABASE_HOST: postgreSql
      DATABASE_PORT: 5432
      DATABASE_NAME: Intern
      DATABASE_USER: postgres
      DATABASE_PASS: postgres
    ports:
      - "8000:8000"
    depends_on:
      - postgreSql
    networks:
      - net
volumes:
  postData:
networks:
  net:
    driver: bridge
